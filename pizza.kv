#:import utils kivy.utils
#:set color1 "#DD7835"
#:set color2 "#C8C8C8"
MainWidget:

<CoverImage@CoverBehavior+Image>:
    reference_size:self.texture_size

<MainWidget>:
    recycleView: recycleView
    CoverImage:
        source: "images/bg-pizza.jpg"
        canvas:
            Color:
                rgba:0,0,0,0.6
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        orientation: "vertical"
        Image:
            source: "images/logo.png"
            size_hint: None, None
            size: dp(200), dp(100)
            allow_stretch: True
            pos_hint:{"center_x": 0.5}
        TitleLabel:
            text: "Les pizzas"
        BoxLayout:
            padding: dp(16), dp(20)
            RecycleView:
                id: recycleView
                viewclass: 'PizzaWidget'
                RecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(16)

<PizzaWidget>:
    BoxLayout:
        size_hint_max_x: dp(400)
        size_hint_min_x: dp(200)
        orientation: "vertical"
        BoxLayout:
            spacing: dp(10)
            FitLabel:
                text: root.nom
                font_size: dp(22)
                bold: True
            Badge:
                text: "VEGETARIENNE" if root.vegetarienne else ""
        LeftAlignLabel:
            text: root.ingredients
            color: utils.get_color_from_hex(color2)
    FitLabel:
        text: "$"+str(root.prix)
        font_size: dp(20)
        pos_hint: {"top": 0.9}
        color: utils.get_color_from_hex(color1)
<Badge@FitLabel>:
    color: 0,0,0,1
    bold: True
    font_size: dp(10)
    padding: dp(8), dp(3)
    canvas.before:
        Rectangle:
            source: "images/badge.png"
            pos: self.pos
            size: self.size

<FitLabel@Label>:
    size_hint: None,None
    size: self.texture_size
<LeftAlignLabel@Label>:
    text_size: self.size
    halign: "left"
    valign: "center"
    canvas.before:
        Color:
            # rgb:utils.get_random_color()
            rgba: 0,0,0,0
        Rectangle:
            pos: self.pos
            size: self.size
<TitleLabel@FitLabel>:
    bold: True
    font_size: dp(22)
    padding: dp(16), dp(3)
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex(color1)
        Rectangle:
            pos: self.pos
            size: self.size